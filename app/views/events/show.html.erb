<h1>Event show page</h1>

<p>
  <%= @event.event_name %> happens on <%= @event.event_day %>, starts at <%= index_to_time(@event.start_index) %>, ends at <%= index_to_time(@event.end_index) %>
</p>

<h2>Event description:</h2>
<p>
  <%= @event.description %>
</p>

<%= link_to "Delete event", event_path(@event), method: :delete,
              data: { confirm: "Are you sure?" }, class: "btn btn-xs btn-danger" %>
